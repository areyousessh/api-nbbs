generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int          @id @default(autoincrement())
  name          String
  email         String          @unique
  cellphone     String
  password      String
  GroupUsers    GroupUsers[]
  ScheduleUsers ScheduleUsers[]

  @@map("users")
}

model Schedules {
  id            Int          @id @default(autoincrement())
  barberName    String
  date          String
  ScheduleUsers ScheduleUsers[]

  @@map("schedules")
}

model Group {
  id         Int          @id @default(autoincrement())
  name       String
  GroupUsers GroupUsers[]
}

model GroupUsers {
  id       Int          @id @default(autoincrement())
  id_user  Int
  user     Users  @relation(fields: [id_user], references: [id])
  id_group Int
  group    Group  @relation(fields: [id_group], references: [id])
}

model ScheduleUsers {
  id          Int          @id @default(autoincrement())
  id_user     Int
  user        Users     @relation(fields: [id_user], references: [id], onDelete: Cascade)
  id_schedule Int
  schedule    Schedules @relation(fields: [id_schedule], references: [id], onDelete: Cascade)
}
